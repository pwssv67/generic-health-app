<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="24dp"
    android:layout_margin="8dp"
    android:elevation="10dp"
    android:background="@drawable/snippet_background">

    <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="21.12.21"
        android:textColor="@color/primaryText"
        android:textSize="24sp"
        android:paddingHorizontal="24dp"
        android:paddingVertical="16dp"
        />

    <ImageView
        android:id="@+id/iv_drink_image"
        android:layout_width="64dp"
        android:layout_height="64dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_date"
        android:src="@drawable/ic_glass_of_water_64dp"
        android:layout_marginTop="16dp"
        />

    <TextView
        android:id="@+id/tv_drink_counter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/iv_drink_image"
        app:layout_constraintBottom_toBottomOf="@id/iv_drink_image"
        app:layout_constraintLeft_toRightOf="@id/iv_drink_image"
        android:layout_marginLeft="32dp"
        tools:text = "8"
        android:textSize="32sp"
        />

    <ImageView
        android:id="@+id/iv_eat_image"
        android:layout_width="64dp"
        android:layout_height="64dp"
        app:layout_constraintTop_toBottomOf="@id/iv_drink_image"
        app:layout_constraintLeft_toLeftOf="parent"
        android:src="@drawable/ic_eat_64dp"
        android:layout_marginVertical="16dp"
        />

    <TextView
        android:id="@id/tv_eat_counter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/iv_eat_image"
        app:layout_constraintBottom_toBottomOf="@id/iv_eat_image"
        app:layout_constraintLeft_toRightOf="@id/iv_eat_image"
        android:layout_marginLeft="32dp"
        tools:text = "1600"
        android:textSize="32sp"
        />

    <ImageView
        android:id="@+id/iv_training_image"
        android:layout_width="64dp"
        android:layout_height="64dp"
        app:layout_constraintTop_toBottomOf="@id/iv_eat_image"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/ic_fitness_64dp"
        android:layout_marginVertical="16dp"

        />

    <TextView
        android:id="@id/tv_training_counter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/iv_training_image"
        app:layout_constraintBottom_toBottomOf="@id/iv_training_image"
        app:layout_constraintLeft_toRightOf="@id/iv_training_image"
        android:layout_marginLeft="32dp"
        tools:text = "30"
        android:textSize="32sp"
        />


</androidx.constraintlayout.widget.ConstraintLayout>